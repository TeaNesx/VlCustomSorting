{% block sw_many_to_many_assignment_card_grid_columns %}
    {% parent %}

    <template slot="column-sortOrder" slot-scope="{ item }">
        <input 
            type="text" 
            class="sw-field__input" 
            :value="item.sortOrder"
            @input="item.sortOrder = $event.target.value"
            @change="onSortOrderChange(item)"
            style="width: 100%; height: 32px; padding: 0 10px; border: 1px solid #d1d9e0; border-radius: 4px;"
        />
    </template>
{% endblock %}